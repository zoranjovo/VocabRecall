datasource db {
  provider = "sqlite"
  url      = "file:./data.sqlite"
}

generator client {
  provider = "prisma-client-js"
}


model Card {
  id              String   @id @default(cuid())
  partA           String
  partB           String
  aliasesA        Json
  aliasesB        Json
  easeFactor      Float    @default(2.5)
  note            String?
  correctInterval Int      @default(1)              // Default to 1 day interval
  nextReview      DateTime @default(now())
  insertedAt      DateTime @default(now())          // When it was inserted into SRS
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}